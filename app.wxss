.iconfont {
  font-family:"my-icon" !important;
  font-size:50px;
  line-height: 42px;
  color: #ffffff;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.inline{ display: inline;}


.citypickers{ position: fixed; height: 100%; width: 100%; min-height: 100%; background-color: red; left: 0; bottom: 0; }
.citybody { position: fixed; bottom: 0px; width: 100%; left: 0; z-index: 555; background-color: #fff;}
.cityheader { position: absolute; top:0px; width: 100%; z-index: 4; font-size: 28rpx;}
.city-cancel { float: left; margin:0 20rpx; color: #818181;}
.city-true { float: right; margin:0 20rpx; color: #2FB42E}
.section .picker { background-color: #fff; border-bottom: 1px #d9d9d9 solid; border-top: 1px #d9d9d9 solid; font-size: 28rpx; color: #555;}
.citypicker .cheng{line-height:60rpx;height:60rpx;font-size:28rpx;padding-left:10px;}
