.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view,text,navigator{
  font-family:'Microsoft YaHei','PingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif;
}
view{
  box-sizing: border-box;
}
navigator{
  display: block;
  box-sizing: border-box;
}
@font-face {font-family: "my-icon";
  src: url('.pages/fonts/fontawesome-webfont.eot?t=1472630499'); /* IE9*/
