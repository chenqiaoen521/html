image{display: block;}
page{width:100%;height:100%; background: #f4f4f4;}

.header .header-img{height: 340rpx;width: 100%;}
.header .explain{position: absolute;top: 30rpx;right: 30rpx;}
.header .explain .jifen{width: 45rpx; height: 45rpx;margin:0 auto;}
.header .explain .ming{font-size: 28rpx; color: #999999;}
.header .box{position:absolute; top: 50rpx;left: 50%;-webkit-transform: translateX(-50%);transform: translateX(-50%);}
.header .tit{font-size: 32rpx;color:#aaaaaa;text-align: center;}
.header .score{font-size: 120rpx;margin-top: 20rpx; color:#ff2020;font-weight: 300;text-align: center; }

.jf {display: -webkit-box;display: -ms-flexbox;display: flex;  background: #fff;border-top: 1px solid #eee; border-bottom:1px solid #eee;}
.jf .on{background-color: #f1f1f1;}
.jf .item{-webkit-box-flex:1;-ms-flex:1;flex:1;border-right:1px solid #eee;border-bottom:1px solid #eee;padding:30rpx 0;}
.jf .item .txt{text-align: center;font-size: 32rpx; color: #333333;margin-top: 20rpx;}
.jf .item .active{color: #ff6698;}
.jf image {width: 44rpx; height: 44rpx;margin: 0 auto;}

.jfdh{line-height: 130rpx; font-size: 34rpx; color: #f33e5c;text-align: center;}
.jfdh .txt{padding:0 30rpx;}
.jfdh .liner{width: 120rpx;display: inline-block;vertical-align: middle; height: 2rpx;background: #e3e3e3;}
.list-product{display: -webkit-box;display: -ms-flexbox;display: flex;-ms-flex-wrap: wrap;flex-wrap: wrap;border-top: 1px solid #eee;}
.list-product .swapper{width: 50%;float: left;  background: #fff;}
.list-product .item{padding:15rpx 18rpx 20rpx;border-bottom:1px solid #eee;border-right:1px solid #eee;}
.list-product .item .img {display:block;width:100%; height: 0; position: relative; padding-bottom: 100%;}
.list-product .item .img>image{ display: block; width: 100%; height: 100%; position: absolute; left: 0; top: 0; }
.list-product .item .title{color:#333333;font-size: 32rpx;padding:15rpx 0;font-weight: 500;  line-height: 1.5; display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;overflow:hidden;}
.list-product .item .bottom{display:-webkit-box;display:-ms-flexbox;display:flex;-webkit-box-pack: justify;-ms-flex-pack: justify;justify-content: space-between;-webkit-box-align: center;-ms-flex-align: center;align-items: center;}
.list-product .item .bottom .score{color: #999999;font-size: 28rpx;}
.list-product .item .bottom .score>text{color: #ff2020;padding-right: 5rpx;}
.list-product .item .bottom .btn{color: #ff6698;font-size: 28rpx; border:1px solid #ff6698;padding:6rpx 18rpx;border-radius: 7rpx;}

.coupon{display: -ms-flexbox;display: -webkit-box;display: flex; height:115px;width: 90%;margin:19rpx auto 38rpx; border-radius:7px;border:1px dashed #dcdcdc; }
.coupon .left{-ms-flex:0 0 70%;-webkit-box-flex:0;flex:0 0 70%;text-align: center;border-right:1px dashed #dcdcdc;}
.coupon .up {background: #fff;height: 90px;}
.coupon .down {font-size: 11px; color: #999999;line-height: 25px;}
.coupon .left .up{font-size: 13px;color: #ff6698;border-radius: 7px 0 0 0;padding-top: 18px;}
.coupon .left .up .price{font-size: 30px;}
.coupon .left .up .price-desc{color: #b9b9b9;font-size: 12px;}
.coupon .right{-ms-flex:1;-webkit-box-flex:1;flex:1;position: relative;}
.coupon .right .up{overflow: hidden;border-radius: 0 7px 0 0;background: #16d0ff;}
.coupon .right .name{font-size: 13px; color: #16d0ff;font-weight: normal;margin-top: 55rpx;padding:3rpx 5rpx;margin:0 auto;text-align: center; border-radius:20rpx;border:2px solid #09b1db;   width: 170rpx; background: #fff;}
.coupon .right .desc{font-size: 12px; color: #fff;padding:5rpx 10rpx; text-align: center;margin-top: 40rpx;}
.coupon .right .down{padding-left: 35rpx;text-align: center;}
