page{
    background: #f7f7f7;
}
view{background: #fff;}
.center{
    padding: 20px 15px;
    background-color: #ff6698; 
    border-bottom:1rpx solid #e5e5e5;
    box-shadow: 0 0 2rpx #bbb;
    margin-bottom: 1rpx;
}
.center .wrapper{
    height:62px;
    color: #fff;
    background-color: #ff6698; 
}
.center .wrapper >image{
    width:62px;
    height:62px;
    border-radius:50%;
    vertical-align: bottom;
}
.center .wrapper .middle{
    display: inline-block;
    vertical-align: bottom;
    background-color: #ff6698; 
    height: 40px;
    margin:8px 0 14px 20px;

}
.center .middle .name{font-size: 15px;line-height: 24px;}
.center .middle .member{font-size: 12px;background-color: #ff6698; }
.center .right {float: right;margin:12px 0; background-color: #ff6698;  }
.center .right .text{ background-color: #ff6698;}
.center .right .icon{display: block; margin:0 auto;width: 16px;height: 16px;background: url('../img/icon.png') no-repeat;background-size: 100%;}
.center .right .box{font-size: 12px; display: inline-block;line-height: 22px;background-color: #ff6698; }
.center .box:first-child{margin-right: 10px;}
.item {height: 42px;line-height: 42px;border-bottom:1rpx solid #e5e5e5;}
.item .icon{width: 20px;height: 20px;float:left;margin:11px;}
.item .ding{margin-top:12px;}
.item .local{width: 18px;}
.item .jiantou{display: block;width: 7px;height: 13px; float: right;margin-top: 14px;}
.item .title{font-size: 15px;color: #1a1a1a;vertical-align: bottom;}
.item .right{float: right;font-size: 15px;color: #818181;height: 41px;}
.state{width: 100%; display: -ms-flexbox; display: flex;font-size: 14px;color:#4c4c4c;border-bottom:1rpx solid #e5e5e5;padding:10px 0;margin-bottom: 8px;}
.state .state-item{-ms-flex:1;flex:1;text-align: center;width: 100%;}
.state .state-icon{margin:0 auto;width:25px;height:21px;}
.state .state-item .count{position: absolute;display: inline-block;margin:-6px 0 0 -8px; font-size: 8px;text-align: center; background: #f72a3b; border-radius: 50%;color: #fff;width:13px;height:13px;line-height:13px;
}
.state .state-item .text{text-align: center;}
navigator.item{ background-color: #fff; }



.wxapp-modal{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 left: 0px;
 z-index:999;
}
.wxapp-modal .content{
 width: 100%;
 bottom: 10px;
 text-align: center;
 position: absolute;
 z-index: 1000;
 background: #fff;
}
.wxapp-modal .content .header{
 margin: auto;
 width: 93%;
 height: 60px;
 line-height: 60px;
 text-align: center;
 background-color: #FFFFFF;
 position: relative;
 z-index:9999;
 border-top-left-radius: 8px;
 border-top-right-radius: 8px;
 border-bottom: 1px #eee solid;
}
.wxapp-modal .content .body{
 margin: auto;
 width: 93%;
 background-color: #FFFFFF;
 position: relative;
 z-index:9999;
 border-bottom-left-radius: 8px;
 border-bottom-right-radius: 8px;
 overflow: hidden;
}
.wxapp-modal .content .footer{
 margin: auto;
 width: 93%;
 height: 60px;
 line-height: 60px;
 background-color: #FFFFFF;
 position: relative;
 z-index: 9999;
 border-radius: 8px;
 margin-top: 10px;
 text-align: center;
}
.wxapp-modal .content .footer button{
 display: inline-block;
 width: 49%;
 height: 60px;
 line-height: 60px;
 background-color: #FFFFFF;
 margin-left: 0px;
}
.wxapp-modal .content .footer button:active{
 background-color: #eee;
}
.wxapp-modal .content .footer button::after{
 content:none;
}
.wxapp-modal .content .footer .cancel{
 color: #fa5b43;
 border-right: 1px #eee solid;
 border-top-right-radius: 0px;
 border-bottom-right-radius: 0px;
 border-top-left-radius: 8px;
 border-bottom-left-radius: 8px;
}
.wxapp-modal .content .footer .confirm{
 color: #1ed3fa;
 border-top-left-radius: 0px;
 border-bottom-left-radius: 0px;
 border-top-right-radius: 8px;
 border-bottom-right-radius: 8px;
}
.wxapp-modal .mask{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 background-color:rgba(0,0,0,0.5);
}