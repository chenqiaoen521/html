page{width:100%;height:100%; background: #f4f4f4}
.coupon{display: flex; height:115px;width: 90%;margin:19rpx auto 38rpx; border-radius:7px;border:1px dashed #dcdcdc; }
.coupon .left{flex:0 0 210rpx;text-align: center;border-right:1px dashed #dcdcdc;}
.coupon .up {background: #fff;height: 90px;}
.coupon .down {font-size: 12px; color: #999999;line-height: 25px;}
.coupon .left .up{font-size: 13px;color: #ff6698;border-radius: 7px 0 0 0;padding-top: 18px;}
.coupon .left .up .price{font-size: 30px;}
.coupon .left .up .price-desc{color: #b9b9b9;font-size: 12px;}
.coupon .right{flex:1;position: relative;}
.coupon .right .up{overflow: hidden;padding-left: 35rpx;border-radius: 0 7px 0 0;}
.coupon .right .name{font-size: 15px; color: #333333;font-weight: bold;margin: 55rpx 0 16rpx;}
.coupon .right .desc{font-size: 12px; color: #b9b9b9;}
.coupon .right .down{padding-left: 35rpx;}
.coupon .right .invalid{position: absolute; top: 5px;right: 15px;font-size: 13px; line-height: 21px;padding: 0 15px; border: 1px solid #b9b9b9;
transform-origin:right bottom;
transform: rotate(-20deg);
}


.disable {color: #b9b9b9 !important;}
.disable .down{color: #b9b9b9 !important;}
.disable .left .up{color: #b9b9b9 !important;}
.disable .right .name{color: #b9b9b9 !important;}
