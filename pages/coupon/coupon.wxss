page{width:100%;height:100%; background: #f4f4f4}
.coupon{display: -webkit-box;display: -ms-flexbox;display: flex;width: 90%;margin:19rpx auto 20rpx; border-radius:7px;border:1px dashed #ff6698; background-color: #fff; }
.coupon .left{-webkit-box-flex:0;-ms-flex:0 0 220rpx;flex:0 0 220rpx;text-align: center;border-right:1px dashed #ff6698;}
.coupon .up {background: #fff; padding-bottom: 30rpx;}
.coupon .down {font-size: 12px; color: #999999;line-height: 25px;}
.coupon .left .up{font-size: 13px;color: #333;border-radius: 7px 0 0 0;padding-top: 40rpx;}
.coupon .price{font-size: 60rpx;}
.coupon  .price-desc{color: #888;font-size: 12px; margin-top: 10rpx; text-align: left;}
.coupon .left .down{ width: 70%; height: 48rpx; border-radius: 8rpx; color: #fff; text-align: center; line-height: 48rpx; margin: 20rpx auto; background-color: #ff6698; font-size: 24rpx;}
.coupon .right{-webkit-box-flex:1;-ms-flex:1;flex:1;position: relative;}
.coupon .right .up{overflow: hidden;padding-left: 35rpx;border-radius: 0 7px 0 0;}
.coupon .right .name{font-size: 15px; color: #333;margin: 55rpx 0 16rpx;}
.coupon .right .desc{font-size: 12px; color: #999;}
.coupon .right .down{ margin-top: 6rpx;}
.coupon .right .invalid{position: absolute; top: 5px;right: 15px;font-size: 13px; line-height: 21px;padding: 0 15px; 
border: 1px solid #b9b9b9;
-webkit-transform-origin:right bottom;
        transform-origin:right bottom;
-webkit-transform: rotate(-20deg);
        transform: rotate(-20deg);
         background-color:rgba(255,255,255,1);
}

.coupon .red{ color: #ff6698;}

.disable{border:1px dashed #b9b9b9;}
.disable .left{border-right:1px dashed #b9b9b9;}
.disable .right .desc{ color: #b9b9b9 !important;}
.disable  .price-desc{ color: #b9b9b9 !important;}
.disable .red{ color: #b9b9b9 !important;}
.disable {color: #b9b9b9 !important;}
.disable .left .down{ background-color:#b9b9b9;}
.disable .right .down{color: #b9b9b9 !important;}
.disable .left .up{color: #b9b9b9 !important;}
.disable .right .name{color: #b9b9b9 !important;}
