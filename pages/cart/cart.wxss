/**@import "../template/header.wxss";*/
.body {width:234rpx;margin: 0 auto;}
.body image{width:234rpx; height: 212.94rpx;margin-top:79.56rpx;}
.body .text{margin: 23px auto;font-size: 15px; color: #030000;width: 100%; text-align: center;}
.body .jump{font-size: 15px; color: #ff6698;line-height: 30px; text-align: center; height: 30px;border: 1rpx solid #ff6698;border-radius: 10px; display: block;}

/** 修改默认的navigator点击态 **/
.navigator-hover { color:#ff6698; background-color: transparent; opacity: 1;}
/** 自定义其他点击态样式类 **/
.other-navigator-hover { color:#ff6698; background-color: transparent; opacity: 1;}


/****/
page{ padding-bottom:100rpx; background-color: #f5f5f5;}
.gu{ position: fixed; left: 0; bottom: 0rpx; width: 100%; height:100rpx; padding: 10rpx 230rpx 10rpx 170rpx; overflow: hidden;z-index: 6666; border-bottom: 2rpx solid #eee; background-color: #fff; }
.gu .all{ position: absolute; left: 20rpx; top: 0rpx; height: 100rpx; line-height: 100rpx; color: #555; font-size: 32rpx; /*padding-left: 58rpx;*/  width: 140rpx;}
.gu .all .con{ width: 36rpx; height: 36rpx; display: none; position: absolute; left: 0; top: 50%; margin-top: -20rpx;}
.gu .all .con.on{ display: none;}
.gu .all checkbox{ display: block; width: 48rpx !important; height: 48rpx !important; float: left;}
.gu .all text{ display: block; float:left; height: 100rpx; line-height: 100rpx; /*margin-left: 14rpx;*/}
.gu .mon{ font-size: 32rpx; line-height: 40rpx; color: #222; text-align: right; }
.gu .mon .sum .inline{color: #ff6698; font-size: 34rpx;}
.gu .mon text{ font-size: 24rpx; color: #999; line-height: 30rpx; }
.gu .an{ position: absolute; right: 0; top: 0; height: 100rpx; line-height: 100rpx; font-size: 30rpx; color: #fff; background-color: #ff6698; width: 200rpx; text-align: center;}

/**shopcar 开始**/

.shopcar{ padding: 20rpx 0 0 0 ;}
.shopcar .sg{ padding: 20rpx 20rpx 20rpx 80rpx; box-sizing: border-box; position: relative; background-color: #f9f9f9; border-bottom: 2rpx solid #eee;}
.shopcar .sg .chose{ width: 48rpx; height: 48rpx; position: absolute; left: 20rpx; top: 50%; margin-top: -24rpx;}
.shopcar .sg .chose .con{ width: 36rpx; height: 36rpx; display: none; }
.shopcar .sg .chose .con.on{ display: none;}
.wx-checkbox-input{ width: 30rpx !important; height: 30rpx !important;}
.wx-checkbox-input.wx-checkbox-input-checked::before{ }
.shopcar .sg .chose checkbox{ display: block; width: 48rpx; height: 48rpx; }
.shopcar .sg .tuwen{ padding:14rpx 0 0 220rpx; position: relative; height: 200rpx;}
.shopcar .sg .tuwen .do{ position: relative; padding-right: 56rpx; }
.shopcar .sg .tuwen .do .del{ display: block; width: 40rpx; height: 40rpx; margin: 0 auto; position: absolute; right: 0; top: 0;}
.shopcar .sg .tuwen .do .tn{ font-size: 28rpx; color: #222; line-height: 32rpx; height: 64rpx; display: block; overflow: hidden; }
.shopcar .sg .tuwen .vimg{ border: 2rpx solid #eee; width: 200rpx; height: 200rpx; position: absolute; left: 0; top: 0; }
.shopcar .sg .tuwen .vimg image{ display: block; width: 196rpx; height: 196rpx;}
.shopcar .sg .tuwen .td{ font-size: 26rpx; color: #888; line-height: 38rpx; display: block; margin: 14rpx 0; overflow: hidden; text-overflow: ellipsis; white-space:nowrap;}
.shopcar .sg .num{ display: block; overflow: hidden; margin: 0; border: none; }
.shopcar .sg .num image{ display: block; width: 50rpx; height: 50rpx; padding: 2rpx;box-sizing: border-box; background-color: #eee; float: left; position: static; margin: 4rpx 0; opacity: 1; }
.shopcar .sg .num input{ display: block; height: 50rpx; border:none; line-height:50rpx; font-size: 36rpx; color: #555; text-align: center; float: left; margin: 0rpx 10rpx; width: 100rpx;}
.shopcar .sg .suan{ position: relative; padding-right: 180rpx;}
.shopcar .sg .suan text{ font-size: 30rpx; display: block; height: 50rpx; line-height: 50rpx; color: #ff6698; font-weight: bold; position: absolute; right: 0; bottom: 0; width: 180rpx; text-align: right;}


.outime{ background-color: #f1f1f1; padding-bottom: 20px;}
.outime .ot{ font-size: 28rpx; color: #666; height: 60rpx; padding: 10rpx 28rpx 0 28rpx; line-height: 60rpx;}
.outime .shopcar .sg{ padding: 20rpx; background-color: #f5f5f5}
.outime .shopcar .sg .chose{ display: none;}
.outime .shopcar .sg .tuwen .do .del{ display: none;}
.clear{ display: block; margin: 20px auto 0 auto; width: 100px; background-color: #eee; color: #555; text-align: center; border: 2rpx solid #ddd; height:64rpx; line-height: 60rpx; font-size: 28rpx; cursor: pointer;}
