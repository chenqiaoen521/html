/*消息详情 */
page{ background-color: #f0f1f5; }
.messxq{ padding: 20rpx; box-sizing: border-box;}
.messxq .text{ padding: 20rpx; border:2px solid #eee; border-radius:6rpx; background-color: #fff;}
.messxq .text .tit{ padding: 10rpx 10rpx 10rpx 60rpx; position: relative; line-height: 60rpx; overflow: hidden;}
.messxq .text .tit image{ display: block; width:40rpx; height: 36rpx; position: absolute; left: 0rpx; top: 22rpx;}
.messxq .text .tit .time{ display: block; float: right; height: 60rpx; line-height: 60rpx; color: #777; font-size: 26rpx; text-align: right;}
.messxq .text .tit text{ display: block; font-size: 28rpx; color:#333; line-height: 40rpx; padding: 10rpx 0; float: left; }
.messxq .text .td{ font-size: 26rpx; color: #888; line-height: 46rpx;}
.messxq .text .td image{ display:block; width: 100%; margin: 10rpx auto;}

