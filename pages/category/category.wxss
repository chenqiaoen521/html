.goods-list{display: flex;position: absolute;left:0;right: 0;top:0;bottom: 0;}
.goods-list .menu{width:180rpx;flex:0 0 180rpx;height: 100%;}
.goods-list .menu .item{box-sizing: border-box; height:84rpx;line-height: 84rpx;text-align: center;font-size: 24rpx;border-bottom:2rpx solid #dfdfdf; border-left: 8rpx solid #fff; }
.goods-list .menu .on{background: #f7f7f7;border-left:8rpx solid #ff6698; }
.goods-list .goods{flex:1;background: #f7f7f7;height: 100%;}
.goods-list .goods .commodity{padding:16rpx 20rpx;}
.goods-list .goods .commodity .title{font-size: 12px;text-align: left;line-height: 33px;text-indent: 5px;}
.goods-list .goods .commodity .items{display: block; background: #fff;border-radius: 5px; padding: 16rpx 10rpx; overflow: hidden;}
.goods-list .goods .commodity .items .item{ display:block; float:left; padding:0rpx 10rpx; width: 33.33%;}
.goods-list .goods .commodity .items .item .tu{ display:block; width: 100%; height: 0; padding-bottom: 100%; position: relative; overflow: hidden;}
.goods-list .goods .commodity .items .item .tu image{width:100%; position: absolute; left: 0; top: 0; height: 100% !important;}
.goods-list .goods .commodity .items .item>text{font-size: 12px; line-height: 40rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: center; display: block; margin-top: 6rpx;}


