page{width:100%;height:100%; background: #f2f3f5;}
.container {padding:0; width:90%;margin:30rpx auto;display: -webkit-box;display: -ms-flexbox;display: flex;-webkit-box-orient: horizontal;-webkit-box-direction: normal;-ms-flex-direction: row;flex-direction: row;}
.container .left {-webkit-box-flex:1;-ms-flex:1;flex:1; height: 230rpx;position: relative;background-color: #fff;}
.container .right {padding-top:30rpx;-webkit-box-flex:0;-ms-flex:0 0 150rpx;flex:0 0 150rpx; width: 150rpx; background-color: #fff;height: 230rpx;}
.container .left .coupon-groud{width: 100%;height: 100%;}
.container .left .txt{position: absolute;bottom:20rpx;right: 40rpx;color: #fff;left:60rpx;}
.container .left .txt .txt-box .desc{position: relative; margin-bottom: 10rpx; display:-webkit-box;display:-ms-flexbox;display:flex;-webkit-box-pack: justify;-ms-flex-pack: justify;justify-content: space-between;}
.container .left .txt .txt-box .cs{font-size: 40rpx;line-height: 40rpx; }
.container .left .txt .txt-box .choose{font-size: 30rpx;line-height: 40rpx; }
.container .left .txt .txt-box  .icon{width: 16rpx; height: 24rpx; position: absolute; right: -16rpx;bottom: 10rpx;}
.container .left .txt .txt-box .limit{font-size: 30rpx; }
.container .right .purchase{font-size: 40rpx; width: 90rpx;font-weight: 700;line-height: 60rpx; margin:0 auto;}
.container .right .pull{width:55rpx; height: 30rpx;margin:0 auto;display: block;margin-top:8rpx;}